{
    "name": "multiScroller",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Chrome Extension for Scroll Multi Same Web Page",
    "background": {
        "page": "background.html"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": [
            "src/content.js"
        ]
    }],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", "https://*/*", "contextMenus"
    ],
    "content_security_policy": "script-src-elem 'self' 'unsafe-inline' object-src 'self';"
}