{
    "name": "multiScroller",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Chrome Extension for Scroll Multi Same Web Page",
    "background": {
        "scripts": ["src/background.js"]
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": [
            "src/content.js"
        ]
    }],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", "https://*/*", "contextMenus"
    ]
}